<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FrontDesk.Kiosk.ResourceDictionary">
    <Style TargetType="Grid" x:Key="ContactInfoContainer">
        <Setter Property="Width" Value="1654" />
    </Style>

    <Style TargetType="Grid" x:Key="ContactInfoTextFieldLineWrapper">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="8,10,0,0" />
    </Style>

    <!--Digital keyboard-->
    <Style TargetType="Grid" x:Key="DigitalKeyboard">
        <Setter Property="Margin" Value="0,35,0,0"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style TargetType="StackPanel" x:Key="KbBackground">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Background" Value="#00FFFFFF" />
    </Style>
    
    
</ResourceDictionary>