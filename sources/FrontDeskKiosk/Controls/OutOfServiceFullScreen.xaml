<UserControl x:Class="FrontDesk.Kiosk.Controls.OutOfServiceFullScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    MinHeight="600" MinWidth="800">
    <Grid>
        <Border Style="{StaticResource blackBorderLineFixed}" />
        <TextBlock x:Name="txtMessage" x:FieldModifier="private" Margin="0" Text="Kiosk is out of service" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="64" FontWeight="Bold" TextAlignment="Center">
    		<TextBlock.Foreground>
    			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
    				<GradientStop Color="#FFC38D8D" Offset="1"/>
    				<GradientStop Color="#FFD83A3A"/>
    			</LinearGradientBrush>
    		</TextBlock.Foreground>
    	</TextBlock>
            
    </Grid>
</UserControl>
