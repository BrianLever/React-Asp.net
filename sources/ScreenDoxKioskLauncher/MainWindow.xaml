<Window x:Class="ScreenDoxKioskLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenDoxKioskLauncher"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" 
        Title="ScreenDox Kiosk Host" Height="450" Width="800">
    <Window.Background>
        <SolidColorBrush Color="#FFE7BE5D" />
    </Window.Background>
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Image Width="610.3131" Height="108.3439" Margin="0,0,0,0" HorizontalAlignment="Center" 
                   VerticalAlignment="Center"  >
            <Image.Source>
                <BitmapImage UriSource="Images/logo_bw_2019.png" DecodePixelWidth="610" DecodePixelHeight="108" />
            </Image.Source>
        </Image>
    </Grid>
</Window>
